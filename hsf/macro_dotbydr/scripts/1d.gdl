EPS = 0.0001dx = 0: dy = 0dl = SQR((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1))lambda = dr / (dl-dr)if from_dot = 1 then	if abs(1+lambda)>EPS then		dx = (x2 + x1*lambda) / (1+lambda)		dy = (y2 + y1*lambda) / (1+lambda)	endifendifif from_dot = 2 then	if abs(1+lambda)>EPS then		dx = (x1 + x2*lambda) / (1+lambda)		dy = (y1 + y2*lambda) / (1+lambda)	endifendifparameters dx=dx, dy=dyend dx, dy