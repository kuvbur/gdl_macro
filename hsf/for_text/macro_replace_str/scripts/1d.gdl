! Заменяет все вхождения mrs_charToReplace на mrs_newChar в строке mrs_in_str! взято из https://gdl.graphisoft.com/tips-and-tricks/how-to-replace-characters-in-strings! Использование:!mrs_newChar = "-" : mrs_charToReplace = " " : mrs_in_str = "string string"!call "purge_txt" parameters mrs_in_str=mrs_in_str,!							mrs_charToReplace=mrs_charToReplace,!							mrs_newChar = mrs_newChar,!							RETURNED_PARAMETERS mrs_out_strEPS = 0.0001if mrs_newChar=mrs_charToReplace then goto "m_end"if strlen(mrs_in_str)<EPS then goto "m_end"if strlen(mrs_charToReplace)<EPS then goto "m_end"_newStr = ""_newChar = mrs_newChar_currStr = mrs_in_str_charToReplace=mrs_charToReplace_i = 1000while _currStr <> "" and _i > 0 do	_n = STRSTR (_currStr, _charToReplace, 1)   ! check the script for _charToReplace	if _n > 0 then			_newStr = _newStr + STRSUB (_currStr, 1, _n - 1) + _newChar		_currStr = STRSUB (_currStr, _n + 1, STRLEN(_currStr) - _n)	 	else		! if _charToReplace is not found then add _currStr to _newStr		_newStr = _newStr + _currStr		_currStr = ""	endif	_i = _i - 1endwhile"m_end":mrs_out_str = _newStrparameters mrs_out_str=mrs_out_strEXIT mrs_out_str