! Заменяет все вхождения mrc_charToReplace на mrc_newChar в строке mrc_in_str! взято из https://gdl.graphisoft.com/tips-and-tricks/how-to-replace-characters-in-strings! Использование:!mrc_newChar = "-" : mrc_charToReplace = " " : mrc_in_str = "string string"!call "macro_replace_char" parameters mrc_in_str=mrc_in_str,!							mrc_charToReplace=mrc_charToReplace,!							mrc_newChar = mrc_newChar,!							RETURNED_PARAMETERS mrc_out_strEPS = 0.0001if mrc_newChar=mrc_charToReplace then goto "m_end"if strlen(mrc_in_str)<EPS then goto "m_end"if strlen(mrc_charToReplace)<EPS then goto "m_end"if STRSTR (mrc_in_str, mrc_charToReplace, 1)<EPS then 	mrc_out_str = mrc_in_str	goto "m_end"endif_newStr = ""_newChar = mrc_newChar_currStr = mrc_in_str_charToReplace=mrc_charToReplace_i = 1000while _currStr <> "" and _i > 0 do	_n = STRSTR (_currStr, _charToReplace, 1)	if _n > 0 then			_newStr = _newStr + STRSUB (_currStr, 1, _n - 1) + _newChar		_currStr = STRSUB (_currStr, _n + 1, STRLEN(_currStr) - _n)	 	else		! if _charToReplace is not found then add _currStr to _newStr		_newStr = _newStr + _currStr		_currStr = ""	endif	_i = _i - 1endwhile"m_end":mrc_out_str = _newStrparameters mrc_out_str=mrc_out_strEXIT mrc_out_str