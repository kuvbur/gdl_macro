! Заменяет все вхождения mrw_charToReplace на mrw_newChar в строке mrw_in_str! взято из https://gdl.graphisoft.com/tips-and-tricks/how-to-replace-characters-in-strings! Использование:!mrw_newWord = "--" : mrw_wordToReplace = "xx" : mrw_in_str = "stringxxstring"!call "macro_replace_word" parameters mrw_in_str=mrw_in_str,!									mrw_newWord=mrw_newWord,!									mrw_wordToReplace = mrw_wordToReplace,!									RETURNED_PARAMETERS mrw_out_strEPS = 0.0001mrw_out_str_ = mrw_in_strif strlen(mrw_in_str)<EPS then goto "m_end"if strlen(mrw_wordToReplace)<EPS then goto "m_end"start_find = STRSTR(mrw_out_str_, mrw_wordToReplace, 1)if start_find < EPS then goto "m_end"len_find_str = STRLEN (mrw_wordToReplace)len_replace_str = STRLEN (mrw_newWord)i = 1WHILE start_find>EPS and (i-100)<EPS DO	len_in_str = STRLEN (mrw_out_str_)	chapt_1 = STRSUB(mrw_out_str_, 1, start_find-1)	chapt_2 = STRSUB(mrw_out_str_, start_find+len_find_str, len_in_str)	mrw_out_str_ = chapt_1 + mrw_newWord + chapt_2	start_find = STRSTR(mrw_out_str_, mrw_wordToReplace, 1)	i = i + 1ENDWHILE"m_end":mrw_out_str = mrw_out_str_EXIT mrw_out_str